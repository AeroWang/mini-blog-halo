<!--miniprogram/pages/history/history.wxml-->
<wxs src="../../utils/dateutils.wxs" module="dateutils" />

<l-capsule-bar 
hidden-capsule
home-page="/pages/index/index"
capsule-color="white" 
bg-color="transparent">
  <image class="capsule-bar-bg" style="height:{{capsuleBarHeight}}rpx;" src="{{index_bg_image_url}}" />
</l-capsule-bar>

<!-- 自定义tabbar -->
<l-tab-bar list="{{list}}" />

<van-toast id="van-toast" />


<van-search
  clearable
  bind:clear="onClear"	
  value=""
  bind:search="onSearch"	
  shape="round"
  background="white"
  placeholder="请输入搜索关键词"
/>

 <!-- 文章总体卡片背景 -->
 <view   style="background-color:rgba(237, 248, 248, 0.959)" wx:for="{{articleList}}" wx:key="index">
      <!-- 单个文章卡片 -->
      <view class="a-com" bindtap="toArticleDetail" data-article-item="{{item}}">
        <view class="article-cover" style="background-image:url({{item.thumbnail}});margin:5px;transform: scale(0.9);">
          <!-- <view class="article-tag" wx:if="{{item.topPriority==1}}">置顶</view> -->
          <view class="article-tag su-font-family" wx:if="{{index==0}}">置顶</view>
          <text>
            {{item.title}}
          </text>
        </view>
        <!-- 封面底部 -->
        <view class="article-footer">
          <van-image
            round
              width="40"
              height="43"
              lazy-load
              src="{{authorInfo.avatar}}"
            />
            <!-- 昵称和发表时间 -->
            <view class="footer-nk-time su-font-family">
              <view class="footer-text nickname">suc</view>
              <view class="footer-text time"> {{dateutils.dateTransfer(item.createTime)}}</view>
            </view>
            <!-- 阅读量 评论数量组件 -->
            <view class="fonter-num-count su-font-family">
              阅读 {{item.visits}}
            </view>
        </view>
      </view>
      
    </view>







