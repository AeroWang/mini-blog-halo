/**index.wxss**/


/*自定义字体*/
.su-font-family{
  font-family: 'CUSTOM_FONT_T_01'; 
   font-weight: bolder;
}

page{
  background-attachment: fixed;
  background-color: #F7F7F7;
  background-size: cover; 
 }

.container-outer{

  margin: 10px;
  margin-bottom: 100px;
  

}

/* 轮播 */
.sw-top-article{
  /* border: 1px blue solid; */
  margin-top: 1px;

}

.swiperClass {
  margin: 0;
  margin-top: 10px;
}

.slide-image {
  width: 100%; 
  height: 90%;
  border-radius: 10px;
  position: relative;
}

image.active {
  transform: none;
  transition: all 0.5s ease-in 0s;
} 

image.quiet {
  transform: scale(0.8333333);
  transition: all 0.2s ease-in 0s;
}



.sw-top-article .ws-top-article-item{
  position: relative;
  justify-content: center;
  /* border-radius: 40rpx; */
}
/* 热门icon */
.sw-top-article .ws-top-article-item .article-hot-icon{
  position: absolute;
  height:25px;width:25px;
  right: 20rpx;
  top:5px;
}
/* title */
.sw-top-article .ws-top-article-item text{
  position: absolute;
  color: #ffffff;
  left: 10px;
  font-size: 13px;
  bottom:18px;
}

.l-list-header{
  background-color: #ffffff;
}
/* 制作海报 */
.posters{
  position: fixed;
  margin: 0;
  padding: 0;
  bottom: 120px;
  font-size: 30px;
  right: 20px;
  box-shadow:0px 0px 8px 4px rgb(180, 177, 177);
  width: 30px;
  height: 30px;
  border-radius: 50%;
  z-index: 99999;
}

/* 关闭海报 */
.closePosters{
  padding-top: 20rpx;
  font-size: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-around ;
}



/* 重做首页 */


.card {
  margin: 10rpx auto !important;
  position: relative;
}

.img-card {
  height: 180rpx !important;
  width: 220rpx !important;
  border-radius: 12rpx !important;
}


/* 图片另一侧整体 */
.right-content{
  position: relative;
  padding-top: 19px;
  height: 100%;
}


/* 内容 */
.avter-content {
  margin-top: 10rpx;
  color: #333;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 右上角标签 */
.right-top-tag-container{
  position: absolute;
  right: 0;
  top: 0;
}

/* 左上角标签 */
.left-top-tag-container{
  position: absolute;
  left: 0;
  top: 0;
}

/* 右侧文章阅读点赞标签 */
.right-content-share{
  position: absolute;
  bottom: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

/* 左侧文章阅读点赞标签 */
.left-content-share{
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.like-container{
  display: flex;
  flex-direction: row;
  margin-left: 10rpx;
  align-items: center
}

.number{
  color: #666;
  font-size: 24rpx;
  margin-left: 12rpx;
}