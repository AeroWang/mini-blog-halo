/* miniprogram/pages/article/article.wxss */

page{
  background-attachment: fixed;
  background-color: #F7F7F7;
  background-size: cover; 
 }

.l-cu-outer-skeleton{
  margin-top: 100px;
}


/* 标题 */
.article-title{
  font-size: 34rpx;
  margin: 20rpx;
  font-weight: bolder;
  text-align: center;
}


.card {
  margin: 10rpx auto !important;
}

.right-card {
  height: 180rpx !important;
  width: 220rpx !important;
  border-radius: 12rpx !important;
}



.avter-content {
  color: #333;
  font-size: 26rpx;
}

.avter-share-container{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.like-container{
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
  align-items: center
}

.number{
  color: #666;
  font-size: 24rpx;
  margin-left: 12rpx;
}


/* 评论卡片 */

.comments-line{
  display: flex;
  flex-direction: row;
  position: relative;
  background-color: #ffffff;
  padding: 10px;
  z-index: -999;
}
.comments-tag{
  border-bottom: 1px rgb(238, 233, 233) solid;
}

.comments-right-tag{
   position: absolute;
   right: 40rpx;
}


.img-card{
  border-radius: 3%;
  /* border: 1px blue solid; */
}
.su-content{
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  font-size: 24rpx;
  margin-left: 90rpx;

}

.su-content .su-content-middle {
  margin-top: 10rpx;
  padding-top: 5px;
  padding-bottom: 5px;
  
}
.su-content .su-content-footer{
 display: flex;
 flex-direction: row;
 position: relative;
 margin-top: 20rpx;
 height: 18px; 
 border-bottom: 1px rgb(231, 227, 227) solid;
}

.su-content-footer .su-footer-time{
  font-weight: lighter;
  position: absolute;
  left: 0;
 
}

 .su-content-footer .su-footer-replyicon{
  font-weight: lighter;
  position: absolute;
  font-size: larger;
  right: 0;
 
}

/* 子评论 */
.child-content{
  margin-left: 90rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px rgb(231, 227, 227) solid;
  position: relative;

}



.child-content .child-time{
  font-weight: lighter;
  margin-top:20rpx;
  display: flex;
  flex-direction: row;
}

.child-time .child-childs{
  margin-left: 20px;
  position: absolute;
  right: 5px;
}


/* 制作海报 */
.posters{
  position: fixed;
  margin: 0;
  padding: 0;
  bottom: 180px;
  font-size: 30px;
  right: 20px;
  box-shadow:0px 0px 8px 4px rgb(180, 177, 177);
  width: 30px;
  height: 30px;
  border-radius: 50%;
}

/* 关闭海报 */
.closePosters{
  padding-top: 20rpx;
  font-size: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-around ;
}

